<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Restaurantes">

    <LinearLayout
        android:id="@+id/restaurant1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/restaurant1Image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/res1"
            android:scaleType="centerCrop"
            android:background="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/restaurant1"
            app:layout_constraintBottom_toBottomOf="@id/restaurant1" />

        <LinearLayout
            android:id="@+id/restaurant1De"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/restaurant1Image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/restaurant1"
            app:layout_constraintBottom_toBottomOf="@id/restaurant1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurante 1"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/restaurant1De" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Direcci칩n: Calle 1, Santa Rosa de Osos"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/restaurant1De" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="4"
                android:stepSize="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/restaurant1De" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/restaurant2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/restaurant1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/restaurant2Image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/res2"
            android:scaleType="centerCrop"
            android:background="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/restaurant2"
            app:layout_constraintBottom_toBottomOf="@id/restaurant2" />

        <LinearLayout
            android:id="@+id/restaurant2DetailsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/restaurant2Image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/restaurant2"
            app:layout_constraintBottom_toBottomOf="@id/restaurant2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurante 2"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/restaurant2DetailsLayout" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Direcci칩n: Calle 2, Santa Rosa de Osos"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/restaurant2DetailsLayout" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="3.5"
                android:stepSize="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/restaurant2DetailsLayout" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/restaurant3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/restaurant2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/restaurant3Image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/res3"
            android:scaleType="centerCrop"
            android:background="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/restaurant3"
            app:layout_constraintBottom_toBottomOf="@id/restaurant3" />

        <LinearLayout
            android:id="@+id/restaurant3DetailsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/restaurant3Image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/restaurant3"
            app:layout_constraintBottom_toBottomOf="@id/restaurant3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Direcci칩n: Calle 2, Santa Rosa de Osos"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/restaurant3DetailsLayout" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="3.5"
                android:stepSize="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/restaurant3DetailsLayout" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="512dp"
        android:layout_height="512dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/comidarapida"
        app:layout_constraintBottom_toTopOf="@id/verMas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/restaurant1" />

    <Button
        android:id="@+id/verMas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver m치s"
        app:layout_constraintTop_toBottomOf="@id/iconImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>